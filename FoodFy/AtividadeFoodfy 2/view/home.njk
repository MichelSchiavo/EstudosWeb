{% extends 'layout.njk' %}
{% block content %}

    <section id="principalSection">
        <div id="principalSectionTexto">
            <h1>As melhores receitas</h1>
            <p>Aprenda a construir os melhores pratos com receitas criadas por profissionais do mundo inteiro</p>
        </div>
        <div id="principalSelectionImg">
            <img src="./img/chef.png" alt="">
        </div>
    </section>

    <main>
        <p id="maisAcessadas">Mais acessadas</p>
        <div id="maisAcessadasItens">            

            {% for recipe in recipes %}
                {% if recipe.most %}
                    <div class="homeMostView">
                        <img src="{{recipe.image}}" alt="">                        
                        <p class="imgTitle">{{recipe.title}}</p>
                        <p class="imgOwner">{{recipe.author}}</p>
                        <div class="mostView">Mais visto</div>
                    </div>
                {% endif %}
            {% endfor %}

        </div>
    </main>

{% endblock  %}